@{
}
@if (TempData["ErrorMessage"] != null)
{
    <script>
        alert("@Html.Raw(TempData["ErrorMessage"].ToString().Replace("\"", "\\\""))");
    </script>
}

<section class="py-3 py-md-5">
    <div class="container">
        <div class="auth-form row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="text-center mb-3">
                        </div>
                        <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Sign in to your account</h2>
                        <form asp-action="Login" method="post">
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Login" type="text" class="form-control" name="Login" id="Login" value="" placeholder="login" required>
                                        <label asp-for="Login" for="Login" class="form-label">Login</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Password" type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                                        <label asp-for="Password" for="password" class="form-label">Password</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-grid my-3">
                                        <input value="Login" class="btn btn-primary btn-lg" type="submit" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <p class="m-0 text-secondary text-center">Don't have an account? <a asp-controller="User" asp-action="Register" class="link-primary text-decoration-none">Register</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
