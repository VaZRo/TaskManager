*@
@{
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @Html.Raw(TempData["ErrorMessage"])
    </div>
}

<section class="py-3 py-md-5">
    <div class="container">
        <div class="auth-form row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="text-center mb-3">
                        </div>
                        <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Sign in to your account</h2>
                        <form asp-action="Register" method="post" enctype="multipart/form-data">
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Login" type="text" class="form-control" name="Login" id="Login" value="" placeholder="login" required>
                                        <label asp-for="Login" for="Login" class="form-label">Login</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="FirstName" type="text" class="form-control" name="FirstName" id="FirstName" value="" placeholder="first-name" required>
                                        <label asp-for="FirstName" for="FirstName" class="form-label">First Name</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="LastName" type="text" class="form-control" name="LastName" id="LastName" value="" placeholder="last-name" required>
                                        <label asp-for="LastName" for="LastName" class="form-label">Last Name</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Email" type="email" class="form-control" name="Email" id="Email" placeholder="name@example.com" required>
                                        <label asp-for="Email" for="Email" class="form-label">Email</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Password" type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                                        <label asp-for="Password" for="password" class="form-label">Password</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="mb-3">
                                        <label for="avatarFile">Avatar</label>
                                        <input type="file" id="avatarFile" name="avatarFile" class="form-control-file" />
                                    </div>
                                </div>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="col-12">
                                    <div class="d-grid my-3">
                                        <input value="Register" class="btn btn-dark btn-lg" type="submit"/>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <p class="m-0 text-secondary text-center">Already have an account? <a asp-controller="User" asp-action="Login" class="link-primary text-decoration-none">Sign in</a></p>
                                </div>
                            </div>
                        </form>

                        @foreach (var key in ViewData.ModelState.Keys)
                        {
                            foreach (var error in ViewData.ModelState[key].Errors)
                            {
                                <div class="text-danger">@error.ErrorMessage</div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
